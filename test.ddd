print "Hello and welcome to Dynamic Programming Language";

var x := 5;

print "x =", x;

if x > 0 then
    print "x is positive";
else
    print "x is non-positive";
end;

print "This is while loop";

while x > 0 loop
    print x;
    x := x - 1;
end;

print "x =", x;

print "This is for loop";

for i in 1 .. 5 loop
    print i;
end;

print "x + 10 =", x + 10;

var y := [1, 2, 3];

print "y[2] =", y[2];

var z := {a := 1, b:= 2, 123};

print "z.a =", z.a;

var add := func (a, b) is
    return a + b;
end;

var result := add(3, 4);

print "3 + 4 =", result;


var multiply := func (a, b) => a * b;

print "3 * 4 =", multiply(3, 4);
